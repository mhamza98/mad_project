<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".signup_student"
    tools:showIn="@layout/activity_signup_student">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <RelativeLayout
            android:id="@+id/rl1_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgView_logo">
            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:id="@+id/user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_login"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/current_password_layout"
                        android:id="@+id/firstname_layout"
                        app:passwordToggleEnabled="true"
                        android:textColorHint="@color/white"
                        android:layout_centerHorizontal="true"

                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/signup_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="textCapWords"
                            android:hint="First Name"
                            android:digits="abcdefghijklmnopqrstuvwxyz"
                            android:background="@drawable/et_bg"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-light"
                            android:textSize="15sp"
                            android:paddingLeft="12dp"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lastname_layout"
                        android:id="@+id/lastname_layout"
                        android:textColorHint="@color/white"
                        app:passwordToggleTint="@color/white"
                        android:layout_centerHorizontal="true"

                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/signup_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="textCapWords"
                            android:hint="Last Name"
                            android:digits="abcdefghijklmnopqrstuvwxyz"
                            android:background="@drawable/et_bg"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-light"
                            android:textSize="15sp"
                            android:paddingLeft="12dp"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/phone_layout"
                        app:passwordToggleEnabled="true"
                        android:textColorHint="@color/white"
                        app:passwordToggleTint="@color/white"
                        android:layout_centerHorizontal="true"

                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/signup_phone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:maxLength="11"
                            android:inputType="number"
                            android:hint="Phone"
                            android:background="@drawable/et_bg"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-light"
                            android:textSize="15sp"
                            android:paddingLeft="12dp"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/email_layout"
                        android:textColorHint="@color/white"
                        app:passwordToggleTint="@color/white"
                        android:layout_centerHorizontal="true"

                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/signup_email"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="textEmailAddress"
                            android:hint="Email"
                            android:background="@drawable/et_bg"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-light"
                            android:textSize="15sp"
                            android:paddingLeft="12dp"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/new_password_layout"
                        app:passwordToggleEnabled="true"
                        android:textColorHint="@color/white"
                        app:passwordToggleTint="@color/white"
                        android:layout_centerHorizontal="true"

                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/signup_newpass"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="textPassword"
                            android:hint="Password"
                            android:background="@drawable/et_bg"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-light"
                            android:textSize="15sp"
                            android:paddingLeft="12dp"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/current_password_layout"
                        android:id="@+id/retype_password_layout"
                        app:passwordToggleEnabled="true"
                        android:textColorHint="@color/white"
                        app:passwordToggleTint="@color/white"
                        android:layout_centerHorizontal="true"

                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/signup_retypewpass"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="textPassword"
                            android:hint="Retype Password"
                            android:background="@drawable/et_bg"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-light"
                            android:textSize="15sp"
                            android:paddingLeft="12dp"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/bt_signup"
                android:layout_below="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="16sp"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>