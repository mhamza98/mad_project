<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".complaint"
    android:background="@drawable/grad_bg"
    tools:showIn="@layout/activity_complaint">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grad_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/st_front_both"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical|end"
            android:text="We try to ensure that all suggestions are managed efficiently and effectively and outcomes delivered are in accordance with the demand"/>

        <EditText
            android:id="@+id/complaint_subject"
            android:textColor="@color/white"
            android:hint="Subject"
            android:textColorHint="@color/white"
            android:background="@drawable/form_bg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:fontFamily="sans-serif"
            android:layout_below="@+id/text"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"/>

        <EditText
            android:id="@+id/complaint_message"
            android:textColor="@color/white"
            android:background="@drawable/form_bg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Write a Comments"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:gravity="top"
            android:textColorHint="@color/white"
            android:textSize="18dp"
            android:fontFamily="sans-serif"
            android:layout_below="@+id/complaint_subject"
            android:layout_marginTop="30dp"/>
        <Button
            android:id="@+id/bt_complaint"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/complaint_message"
            android:background="@drawable/btn_bg"
            android:text="Submit"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>